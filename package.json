{
  "name": "website",
  "version": "1.0.0",
  "description": "Personal website and blog",
  "author": "Omar Elhawary <oedotme@gmail.com> (https://omarelhawary.me)",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/oedotme/website"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "export": "next export -o build",
    "start": "next start",
    "serve": "npx serve build",
    "postbuild": "npm run sitemap",
    "preexport": "npm run build",
    "sitemap": "NODE_ENV=production node -r esbuild-register sitemap.ts",
    "check": "tsc",
    "format": "prettier -w 'src/**/*.{css,html,json,md,mdx,js,jsx,ts,tsx}'",
    "lint": "eslint --fix 'src/**/*.{js,jsx,ts,tsx}'",
    "prepare": "husky install"
  },
  "dependencies": {
    "next": "^12.0.2",
    "preact": "^10.5.15",
    "react": "npm:@preact/compat@17.0.2",
    "react-dom": "npm:@preact/compat@17.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@mapbox/rehype-prism": "^0.7.0",
    "@types/prettier": "^2.4.1",
    "@types/react": "^17.0.33",
    "autoprefixer": "^10.4.0",
    "esbuild-register": "^3.0.0",
    "eslint": "^8.1.0",
    "eslint-config-next": "^12.0.2",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "mdx-bundler": "^6.0.2",
    "next-plugin-preact": "^3.0.6",
    "postcss": "^8.3.11",
    "preact-render-to-string": "^5.1.19",
    "prettier": "^2.4.1",
    "react-ssr-prepass": "npm:preact-ssr-prepass@^1.2.0",
    "tailwindcss": "^2.2.19",
    "typescript": "^4.4.4"
  }
}
